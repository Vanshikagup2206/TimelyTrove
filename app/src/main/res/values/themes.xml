<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskTrack" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondaryContainer">@color/blue</item> <!--change the bottom navigation bar item color -->
    </style>

    <style name="Theme.TaskTrack" parent="Base.Theme.TaskTrack" />


    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:headerBackground">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/blue</item>

    </style>

    <style name="MyTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:headerBackground">@color/blue</item>
    </style>
</resources>